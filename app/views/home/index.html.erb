  <% else %>

  <section class="header_homepage">
    <div class="Header_info_homepage">
      <h1 class="home_title">Welcome to JustInvoice</h1>
      <p class="header_text">
        JustInvoice is a simple and easy-to-use app to manage your bills
      </p>
      <a href="<%= new_user_registration_path %>" class="btn btn-primary" id="signup_button">Sign Up For Free</a>
    </div>
  </section>

  <section class="home_content">
    <section class="home_manage">
      <div class="home_manage_text">
        <h2>Manage your bills</h2>
        <p>Effortlessly handle your invoices and keep track of your expenses</p>
      </div>
      <div class="home_manage_image">
        <%= image_tag("homepage_checklist.png") %>
      </div>
    </section>

    <section class="home_time">
