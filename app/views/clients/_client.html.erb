<table class="table client-custom-table">
  <thead>
    <tr>
      <th scope="col">Client Number</th>
      <th scope="col">Actions</th>
      <th scope="col">Client Name</th>
      <th scope="col">Contact Name</th>
      <th scope="col">City</th>
      <th scope="col">Address</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= client.id %></td>
        <td>
          <%= link_to fa_icon("times"), client_path(client), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
          class: 'btn btn-danger btn-sm' %>
          <%= link_to fa_icon("pencil-alt"), edit_client_path(client), class: 'btn btn-primary btn-sm' %>
        </td>
        <td><%= client.client_name %></td>
        <td><%= client.contact_name  %></td>
        <td><%= client.client_city %></td>
        <td><%= client.client_address %></td>
        <td><%= client.client_email %></td>
        </tr>
  </tbody>
</table>
